<!--ブックレビュー一覧-->
<div class="container">
<div class="texts-wrapper">
  <div class="contents-title text-center">
    <div class="row justify-content-center">
      <div class="card-deck">
        <% @books.each do |book| %>
          <div class="col-12 col-md-6 col-lg-4 text-card-container">
            <div class="card content-card border-dark">
              <div class="card-header p-0">
                <%= link_to new_public_book_review_path(book) do %>
                  <%= image_tag book.image_url,class:"card-img-top" %>
                <% end %>
              </div>
              <div class="card-body d-flex align-items-center">
                <p class="card-title text-left"><%= book.item_caption %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>


