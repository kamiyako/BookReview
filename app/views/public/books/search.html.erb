<div class="h4 pb-2 mb-4 text-dark border-bottom border-dark">
  <h3 class="text-center">検索結果一覧</h3>
</div>
<% if @books %>
  <% @books.each do |book| %>
    <div class="container">
      <div class=" d-flex align-items-center justify-content-center">
        <div class="card mb-3" style="max-width: 540px;">
          <div class="row g-0">
            <div class="col-md-4">
              <%= link_to  new_public_book_review_path(book) do %>
                <%= image_tag book.image_url,class: "card-img-top" %>
              <% end %>
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title">
                  <%= link_to  new_public_book_review_path(book) do %>
                    <%= book.title %>
                  <% end %>
                </h5>
                <li class="list-group-item"><%= book.author %></li>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
<% if @books.size == 0 %>
 <h3 class="text-center">検索結果はありませんでした<i class="fa-solid fa-face-sad-tear"></i></h3>
<% end %>
