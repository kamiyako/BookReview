<% if review.favorited_by?(current_user) %>
  <%= link_to public_book_review_favorites_path(book_id: book.id,review_id: review.id), method: :delete,remote: true do %>
    <i class="fa fa-heart like_icon"></i><%= review.favorites.count %>
  <% end %>
<% else %>
  <%= link_to public_book_review_favorites_path(book_id: book.id,review_id: review.id), method: :post,remote: true do %>
    <i class="fa fa-heart unlike_icon"></i><%= review.favorites.count %>
  <% end %>
<% end %>