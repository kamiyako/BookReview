<h3>タグリスト</h3>
<% @tag_list.each do |list| %>
  #<%= link_to list.tag_name, tag_reviews_path(tag_id: list.id) %>
  <%= "(#{list.reviews.count})" %>
<% end %>
<h1>ブックレビュー投稿一覧</h1>
<% @reviews.each do |review| %>
  <div class="card" style="width: 18rem;">
    <%= image_tag review.book.image_url,class: "card-img-top" %>
  </div>
   <% review.tags.each do |tag| %>
      #<%= link_to tag.name, tag_reviews_path(tag_id: tag.id) %>
   <% end %>
<% end %>


