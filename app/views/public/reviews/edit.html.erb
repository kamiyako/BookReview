<h1>レビュー編集画面</h1>
<td><%= @review.book.title %></td>
<%= form_with model: @review, url: "/public/books/#{@book.id}/reviews/#{@review.id}", method: :patch do |f| %>
  <td><%= @review.title %></td>
  <td><%= @review.body %></td>
  <td><%= @review.star %>点</td>
  <td class="review-star" data-score="<%= review.star %>"></td>
  <div class="field">
      <%= f.label"タグ (スペースで区切ると複数タグ登録できます)" %>
      <%= f.text_field :tag_name, value: @tag_list,class:"form-control"%>
  </div>
  <%= f.submit '編集する' %>
<% end %>
