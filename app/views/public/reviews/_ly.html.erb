<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="h3 pb-2 mb-4 mt-4 text-dark border-bottom border-dark">
       <p class="text-center"><strong><%= @user.name %>さんのレビュー投稿一覧</strong></p>
      </div>
      <% @reviews.each do |review| %>
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title"><%= review.title %></h5>
          <p class="card-text"><%= review.body %></p>
          <%= link_to "削除する", public_book_review_path(review.book, review), method: :delete,"data-confirm" => "本当に削除しますか？",class:"btn btn-danger" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>


<!--ユーザー一覧（名前とemailが確認できる）-->
<div class="row">
  <div class="col-md-6 offset-md-3">
    <h3><strong>ユーザー一覧</strong></h3>
    <table class="table table-borderless">
      <thead>
        <tr>
          <th scope="col">ユーザー名</th>
          <th scope="col">Eメール</th>
        </tr>
      </thead>
      <% @users.each do |user| %>
      <tbody>
        <tr>
          <td><%= link_to user.name,admin_user_path(user.id) %></td>
          <td><%= user.email %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
</div>