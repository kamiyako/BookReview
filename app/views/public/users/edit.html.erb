<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<% if @user.errors.any? %>
  <%= @user.errors.count %>error prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<!--プロフィール編集-->
<h2>プロフィール編集</h2>
  <%= form_with model: @user, url: "/public/users/#{@user.id}", method: :patch do |f| %>
    <div class="form-group">
      <label for="name">Name</label><br>
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%><br>
    </div>
    
    <div class="form-group">
      <label for="email">Introduction</label><br>
      <%= f.text_area :email, id:"email", placeholder:"emaiil"%><br>
    </div> 
    
    <div class="form-group">  
      <%= f.submit '更新' %>
    </div> 
  <% end %>
</div>