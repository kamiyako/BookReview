<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/"><h2><strong>Book Review</strong></h2></a>
      <% if current_user.present? %>
        <p class="text-light">こんにちは、<%= current_user.name %>さん！</p>
      <% else %>
        <p class="text-light">こんにちは、ゲストさん！</p>
      <% end %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                    aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
         <li class="nav-item">
           <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'nav-link text-white' %>
         </li>
         <!--<li class="nav-item">-->
         <!--  <= link_to '投稿フォーム', new_post_image_path, class: 'nav-link text-dark' >-->
         <!--</li>-->
         <!--<li class="nav-item">-->
         <!--  <= link_to 'マイページ', user_path(current_user.id), class: 'nav-link text-dark' >-->
         <!--</li>-->
        <% elsif admin_signed_in? %>
         <li class="nav-item">
           <%= link_to "管理者ログアウト", destroy_admin_session_path, method: :delete, class: 'nav-link text-white' %>
         </li>
        <% else %>
         <li class="nav-item">
           <%= link_to "新規登録", new_user_registration_path, class: 'nav-link text-white' %>
         </li>
         <li class="nav-item">
           <%= link_to "ログイン", new_user_session_path, class: 'nav-link text-white' %>
         </li>
        <% end %>
        <!--検索フォーム-->
        <%= render 'public/books/form', title: @title %>
        </ul>
      </div>
    </div>
  </nav>
